<Window x:Class="Modeling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modeling"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000">
    <Canvas x:Name="Panel">
        <Canvas x:Name="Grid">
            <TextBlock/>
        </Canvas>
        <Button Panel.ZIndex="1" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top"  Click="Button_Click" Canvas.Top="1" />
		<TextBlock Panel.ZIndex="1" x:Name="Statistics"/>
	</Canvas>
</Window>
